<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gameForTwo"
    android:background="#FFF8DC"
    tools:context=".ui.PlayTwoActivity">
    >

    <TextView
        android:id="@+id/player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:text="@string/firstPlayer"
        android:textSize="30sp"

        />

    <LinearLayout
        android:id="@+id/handOpponent1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player1"
        >
        <ImageView
            android:id="@+id/pedraOpponent1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:src="@drawable/pedra"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/papelOpponent1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pedraOpponent1"
            android:src="@drawable/papel"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/tesouraOpponent1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/tesoura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/papelOpponent1" />

        <ImageView
            android:id="@+id/lizardOpponent1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/lagarto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tesouraOpponent1" />

        <ImageView
            android:id="@+id/spockOpponent1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/spock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lizardOpponent1" />

    </LinearLayout>

    <TextView
        android:id="@+id/play3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        android:text="@string/you"
        android:textSize="30sp"

        />

    <LinearLayout
        android:id="@+id/imagesLayout"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play3"

        >

        <ImageView
            android:id="@+id/pedra"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:src="@drawable/pedra"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/papel"
            android:layout_width="60dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pedra"
            android:src="@drawable/papel"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/tesoura"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/tesoura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/papel" />

        <ImageView
            android:id="@+id/lizard"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/lagarto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tesoura" />

        <ImageView
            android:id="@+id/spock"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:src="@drawable/spock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lizard" />

    </LinearLayout>

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagesLayout"
        android:text="@string/play"
        />

</androidx.constraintlayout.widget.ConstraintLayout>